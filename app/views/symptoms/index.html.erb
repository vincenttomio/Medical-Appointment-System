<div class="container mt-5">
  <h1 class="mb-4">Gerenciamento de Sintomas</h1>
  
  <div class="mb-3">
    <%= link_to 'Adicionar Novo Sintoma', new_symptom_path, class: 'btn btn-primary' %>
    <%= link_to 'Voltar', medico_appointments_path, class: 'btn btn-secondary' %>
  </div>

  <% if @symptoms.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @symptoms.each do |symptom| %>
          <tr>
            <td><%= symptom.name %></td>
            <td>
              <%# <%= link_to 'Remover', symptom_path(symptom), 
                          method: :delete, 
                          data: { confirm: 'Tem certeza que deseja remover este sintoma?' }, 
                          class: 'btn btn-sm btn-danger' %>
               <%= button_to 'Remover', symptom_path(symptom), 
                          method: :delete, 
                          data: { confirm: 'Tem certeza que deseja remover este sintoma?' }, 
                          class: 'btn btn-sm btn-danger' %>           
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">
      Nenhum sintoma cadastrado ainda.
    </div>
  <% end %>
</div>